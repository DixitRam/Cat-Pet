{
  "manifest_version": 3,
  "name": "Cursor Pet",
  "version": "1.0",
  "description": "A cute Pet that follows your mouse cursor!",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Cursor Pet",
    "default_icon": "icon2.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "Frames/download.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}